<div class="content mt-3">
    <div class="page-header">
        <div class="page-title">
            <h4>Stationery Management</h4>
            <h6>Update Stationery</h6>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Stationery_Id" />

                <div class="row">
                    <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="Stationery_Name" class="control-label"></label>
                            <input asp-for="Stationery_Name" class="form-control" required />
                        <span asp-validation-for="Stationery_Name" class="text-danger"></span>
                    </div>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="Stationery_Quantity" class="control-label"></label>
                            <input asp-for="Stationery_Quantity" class="form-control" required />
                        <span asp-validation-for="Stationery_Quantity" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-12">

                    <div class="form-group">
                        <label asp-for="Stationery_Price" class="control-label"></label>
                            <input asp-for="Stationery_Price" class="form-control" required />
                        <span asp-validation-for="Stationery_Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-12">
                        <div class="form-group">
                            <label>Assign To (User Role)</label>
                            <select asp-for="Assign_to" class="form-control"
                                    asp-items="@(new SelectList(ViewBag.UserRolesList, "UserRoleId", "UserRoleName"))">
                                <option value="">Select Role</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-lg-12">

                    <div class="form-group">
                        <label asp-for="Stationery_Description" class="control-label"></label>
                            <textarea asp-for="Stationery_Description" class="form-control"></textarea>
                        <span asp-validation-for="Stationery_Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="form-group">
                            <label asp-for="Stationery_Image" class="control-label">Image</label>
                            <div class="image-upload">
                                <input name="Stationery_Image" type="file" class="form-control"/>
                                <span asp-validation-for="Stationery_Image" class="text-danger"></span>
                                <div class="image-uploads">
                                    <img src="~/assets/img/icons/upload.svg" alt="img">
                                    <h4>Drag and drop a file to upload</h4>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Stationery_Image))
                    {
                        <div>
                            <img src="~/stationeyImages/@Model.Stationery_Image"
                                 style="height:120px; width:150px; border:1px solid #ddd; padding:5px; display:block; margin-bottom:10px;"
                                 alt="@Model.Stationery_Name" />
                        </div>
                    }


                </div>
                <div class="form-group">
                    <input type="submit" value="update" class="btn btn-submit me-2" />
                    <a href="@Url.Action("stationery","Admin_")" class="btn btn-cancel">Cancel</a>

                </div>
            </form>
        </div>
    </div>

