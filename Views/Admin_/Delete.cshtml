            @Html.DisplayFor(model => model.Stationery_Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Stationery_Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stationery_Quantity)
        </dd>
