<script>
    $(document).ready(function () {

        function fetchNotifications() {
            $.ajax({
                url: "@Url.Action("GetNotifications", "Admin_")",
                type: "GET",
                success: function (response) {
                    $("#notificationsList").empty();

                    if (response.notifications.length > 0) {
                        $("#notificationCount").text(response.unreadCount).show(); // Show badge only if there are unread notifications
                        response.notifications.forEach(function (notification) {

                            // ✅ Date Formatting Fix Using moment.js
                            let formattedDate = moment(notification.CreatedAt).format("DD MMM YYYY, hh:mm A");

                            $("#notificationsList").append(`
                                <li class="notification-message">
                                    <a href="#">
                                        <div class="media d-flex">
                                            <div class="media-body flex-grow-1">
                                                <p>${notification.message}</p>
                                                <span>${formattedDate}</span> <!-- ✅ Fixed Date Format -->
                                            </div>
                                        </div>
                                    </a>
                                </li>
                            `);
                        });
                    } else {

                        $("#notificationCount").hide(); // Hide badge if no notifications
                        $("#notificationsList").append("<li>No new notifications</li>");

                    }
                },
                error: function () {
                    console.log("Error fetching notifications.");
                }
            });
        }

        // **Clear All Notifications**
        $("#clearNotifications").click(function () {
            $.ajax({
                url: "@Url.Action("ClearAllNotifications", "Admin_")",
                type: "POST",
                success: function (response) {
                    if (response.success) {
                        $("#notificationsList").empty().append("<li>All notifications cleared</li>");
                        $("#notificationCount").hide();
                    }
                },
                error: function () {
                    console.log("Error clearing notifications.");
                }
            });
        });

        // **Call notifications on page load & auto-refresh every 30 sec**
        fetchNotifications();
        setInterval(fetchNotifications, 30000);
    });
</script>
